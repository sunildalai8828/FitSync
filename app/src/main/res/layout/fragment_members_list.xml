<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembersListFragment">

 <TextView
     android:id="@+id/member_list_textview"
     android:text="Members : "
     android:layout_margin="10dp"
     android:textStyle="bold"
     android:textSize="18sp"
     android:layout_centerHorizontal="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>
 <ImageButton
     android:id="@+id/member_list_button"
     android:layout_width="70dp"
     android:layout_height="27dp"
     android:src="@drawable/arrow_drop_down"
     android:layout_alignParentEnd="true"
     android:layout_margin="10dp"
     android:background="@android:color/transparent"/>

 <com.google.android.material.divider.MaterialDivider
     android:id="@+id/divider"
     android:layout_width="wrap_content"
     android:layout_height="2dp"
     android:layout_below="@id/member_list_textview"
     />
 <ListView
     android:id="@+id/memberslist"
     android:layout_below="@id/divider"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>

 <TextView
     android:id="@+id/trainer_list_textview"
     android:text="Trainers : "
     android:textStyle="bold"
     android:layout_margin="10dp"
     android:layout_centerHorizontal="true"
     android:textSize="18sp"
     android:layout_below="@id/memberslist"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>
 <ImageButton
     android:id="@+id/trainer_list_button"
     android:layout_width="70dp"
     android:layout_height="27dp"
     android:src="@drawable/arrow_drop_down"
     android:layout_alignParentEnd="true"
     android:layout_below="@id/memberslist"
     android:layout_margin="10dp"
     android:background="@android:color/transparent"/>

 <com.google.android.material.divider.MaterialDivider
     android:id="@+id/divider2"
     android:layout_width="wrap_content"
     android:layout_height="2dp"
     android:layout_below="@id/trainer_list_textview"
     />
 <ListView
     android:id="@+id/trainerslist"
     android:layout_below="@id/divider2"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>

</RelativeLayout>